<form action="/movies" method="post">
<div class="field">
<label class="label" for="filmName">Film Name:</label>
  <div class="control">
<input class="input" type="text" name="name" placeholder="Movie Name">
  </div>

</div>
<div class="field">
<label class="label" for="quotes">Famous quotes</label>
  <div class="control">
<input class="input" type="text" name="name" placeholder="Famous Quote">
  </div>

</div>
<div class="field">
<label class="label" for="coverPic">Picture</label>
  <div class="control">
<input class="input" type="text" name="coverPic" placeholder="link to picure">
  </div>

</div>
<div class="field">
<label class="label" for="releaseYear">Year Released:</label>
  <div class="control">
<input class="input" type="number" name="releaseYear" placeholder="e.g. 1982">
  </div>

</div>
<div class="field">
<label class="label" for="IMDbRating">IMDb Rating:</label>
  <div class="control">
<input class="input" type="text" name="IMDbRating" placeholder="e.g. 7 / 10">
  </div>

</div>
<div class="field">
<label class="label" for="genres">Genres</label>
  <div class="control">
<input class="input" type="text" name="genres" placeholder="e.g. 'Fiction', 'Horror' etc">
  </div>

</div>

<button class="button is-rounded">Add Movie</button>
</form>
