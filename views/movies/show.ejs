<div class="columns is-2">
  <div class="column is-half is-narrow">

    <img src="<%= movie.coverPic %>" alt="movie.filmName">
</div>
<div class="column is-half is-narrow">
    <h2 class= "subtitle is-2">Movie Name: <%= movie.filmName %></h2>
    <h2 class= "subtitle is-2">Release Year: <%= movie.releaseYear %></h2>
    <h2 class= "subtitle is-2">IMDb Rating: <%= movie.IMDbRating %> /10</h2>
    <h2 class= "subtitle is-2">Famous quote(s): </h2>
    <h2 class="subtitle is 2" ><% movie.quotes.forEach(quote => { %>
      <span style><%= quote.quote %></span>(
        <span><%= quote.charactorName %>)</span>
        <% }) %> </p>

        <p class= "subtitle is-2"><%= movie.generes %></p>
        <span class="buttons">
          <button class="button is-small is-success">üëç </button>
          <a class="button is-small is-info" href="/movies/<%= movie.id %>/edit">Edit </a>
          <form action="/movies/<%= movie.id %>" method="POST">
            <button class="button is-small is-danger" title="Dont Do it! üòµ">Delete</button>
            <input type="hidden" name="_method" value="DELETE">
          </form>
        </span>

  </div>

</div>

